                        android:layout_toRightOf="@+id/quantity_text_view2"
                        android:onClick="increase"
                        android:text="+" />

                    <TextView
                        android:id="@+id/price_text_view2"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/quantity_text_view2"
                        android:layout_toRightOf="@+id/quantity_text_view2"
                        android:text="$0.35" />

                    <TextView
                        android:id="@+id/precio2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/price_text_view2"
                        android:layout_alignBottom="@+id/price_text_view2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="Precio:" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/desnatado_pina"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/desnatado_pina" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_toRightOf="@+id/desnatado_pina"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
